@model UserInfo
@{
    ViewBag.Title = "Başvuru Detayı";
}
@{
    var classTheme = @Model.WillAttend == true ? "primary" : "danger";
}

<main class="text-center">
    <h1 class="h4">Başvuru Detayı</h1>
    <p>
        <span class="badge text-bg-@classTheme">
            @if (Model.WillAttend == true)
            {
                <text>Katiliyor</text>
            }
            else
            {
                <text>Katilmiyor</text>
            }
        </span>
    </p>
    <p>İsim: @Model.Name</p>
    <p>EMail: @Model.Email</p>
    <p>Telefon: @Model.Phone</p>
    <a asp-controller="Meeting" asp-action="List" class="btn btn-outline-@classTheme">Katilimci Listesi</a>
</main>